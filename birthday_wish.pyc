from facepy import GraphAPI
import datetime

def wish_bday():
    for friend in friends['data']:
        if friend['birthday']:
            bday=friend['birthday'].split('/')
            if bday[0]==month and bday[1]==day:
                graph.post(friend['id']+'/feed',0,message=wish)

access_token=''
oauth='FB_API_KEY'
graph=GraphAPI(oauth)
friends=graph.get('me/friends?fields=birthday,name')
wish=['Thank You for being in my life, Happy Birthday!!!']
day=datetime.datetime.now().day
month=datetime.datetime.now().month

if __name__='__main__':
    wish_bday()
